{
	"background": {
		"page": "background.html",
		"persistent": true
	},
	"browser_action": {
		"default_icon": { 
			"16": "icon16.png",
			"24": "icon24.png",
			"32": "icon32.png" 
		},
		"default_title": "Steamgifts New Giveaways",
		"default_popup": "iframe.html"
	},
	"icons": { 
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png" 
	},
	"description": "Steamgifts.com new giveaways notifier!",
	"name": "Steamgifts Notifier",   
	"options_page": "options.html",   
	"permissions": [
		"*://steamgifts.com/*",
		"*://*.steamgifts.com/*",
		"background",
		"notifications"
	],
	"web_accessible_resources": [
		"icon48.png",
		"gift.png"
	],
	"homepage_url": "https://github.com/hertzg/chrome-steamgifts-notifier",
	"manifest_version": 2,
	"version": "1.2.0.0"
}
